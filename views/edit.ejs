<%- include('./partials/header.ejs') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-sm-6">
            <h2 class="alert text-center alert-success">Update Student</h2>
            <form method="POST" action="/student/update/<%= student._id %>">
                <div class="mb-3">
                  <label for="name" class="form-label">Name</label>
                  <input value="<%= student.name %>" type="text" class="form-control" id="name" name="name">
                </div>
                <div class="mb-3">
                    <label for="age" class="form-label">Age</label>
                    <input value="<%= student.age %>" type="text" class="form-control" id="age" name="age">
                </div>
                <div class="mb-3">
                    <label for="fees" class="form-label">Fees</label>
                    <input value="<%= student.fees %>" type="text" class="form-control" id="fees" name="fees">
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
                <a href="/student" class="mx-5 btn btn-secondary">Home</a>
            </form>

            <% if(error) { %>
                <div class="mt-3 alert alert-danger text-center"><%= error %></div>
            <% } %>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>
